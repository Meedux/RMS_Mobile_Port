<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReceivingManagementSystem.Delivery.DeliveryInventorySearchPage"
             xmlns:datePicker="clr-namespace:Syncfusion.XForms.Pickers;assembly=Syncfusion.SfPicker.XForms"
             xmlns:syncmaskededit="clr-namespace:Syncfusion.XForms.MaskedEdit;assembly=Syncfusion.SfMaskedEdit.XForms"
             xmlns:combobox="clr-namespace:Syncfusion.XForms.ComboBox;assembly=Syncfusion.SfComboBox.XForms"
             Title="預り業務-出庫検索">
    <ContentPage.Content>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="800"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <datePicker:SfDatePicker  Grid.ColumnSpan="3" 
                                         ShowFooter="True" 
                                         PickerWidth="300"
                                         SelectedItemFontSize="20"
                                         UnselectedItemFontSize="20"
                                         ColumnHeaderHeight="40" 
                                         WidthRequest="100" HeightRequest="50"
                                         Date="{Binding SearchParams.SelectDate, Mode=TwoWay}"
                                         IsOpen="{Binding IsPickerOpen, Mode=TwoWay}"
                                         PickerMode="Dialog"
                                         OkCommand="{Binding OkSelectDateCommand}"/>

            <StackLayout Grid.Column="1" Padding="0, 20,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="40"></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Text="RFID" VerticalOptions="Center"></Label>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="7*"></ColumnDefinition>
                            <ColumnDefinition Width="60"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Entry x:Name="txtRfid"  Grid.Column="0" Text="{Binding SearchParams.Rfid}"  TextChanged="txtRfid_TextChanged" ></Entry>
                        <ImageButton  Grid.Column="1" Source="Assets/rfid.png" CornerRadius="10" BorderWidth="2" BackgroundColor="#9FBFBE"
                                HeightRequest="40" WidthRequest="40" VerticalOptions="Center" HorizontalOptions="Center"
                                Clicked="RfidButton_Clicked">
                        </ImageButton>
                    </Grid>

                    <Label Grid.Row="1" Text="返却予定日" VerticalOptions="Center"></Label>
                    <Grid Grid.Row="1" Grid.Column="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <syncmaskededit:SfMaskedEdit Mask="0000/00/00"  Value="{Binding SearchParams.InputDate}" HeightRequest="40" VerticalOptions="Center" ValueMaskFormat="IncludeLiterals"/>
                        <ImageButton Grid.Column="1" HorizontalOptions="End" VerticalOptions="Center"  WidthRequest="50" 
                             Source="Assets/calendar.png" Command="{Binding OpenPickerCommand}"></ImageButton>
                        <Button Grid.Column="2" Text="本日" BackgroundColor="#9FBFBE" CornerRadius="10" BorderWidth="2"
                                FontAttributes="Bold" FontSize="22" HeightRequest="50" WidthRequest="150" 
                                VerticalOptions="Center" HorizontalOptions="End" Command="{Binding SetToDayCommand}">
                        </Button>
                    </Grid>

                    <Label Grid.Row="2" Text="棚番号" VerticalOptions="Center"></Label>
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="7*"></ColumnDefinition>
                            <ColumnDefinition Width="4*"></ColumnDefinition>
                            <ColumnDefinition Width="60"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Picker Grid.Column="0" ItemsSource="{Binding ShelfNumbers}" ItemDisplayBinding="{Binding DisplayValue}" SelectedItem="{Binding ShelfNumberSelected}"/>
                        <Entry x:Name="txtShelfRfid" Grid.Column="1" Text="{Binding ShelfRfid}" TextChanged="txtShelfRfid_TextChanged" WidthRequest="1" Completed="txtShelfRfid_Completed"/>
                        <ImageButton  Grid.Column="2" Source="Assets/rfid.png" CornerRadius="10" BorderWidth="2" BackgroundColor="#9FBFBE"
                                HeightRequest="40" WidthRequest="40" VerticalOptions="Center" HorizontalOptions="Center"
                                Clicked="ShelfRfidButton_Clicked">
                        </ImageButton>
                    </Grid>


                    <Label Grid.Row="3" Text="会社名" VerticalOptions="Center"></Label>
                    <Entry  Grid.Row="3" Grid.Column="1" Text="{Binding SearchParams.CompanyName}"></Entry>

                    <StackLayout Grid.Row="4" Orientation="Horizontal" VerticalOptions="Center">
                        <Label Text="氏名"></Label>
                    </StackLayout>
                    <Entry Grid.Row="4" Grid.Column="1" Text="{Binding SearchParams.CustomerName}" ></Entry>

                    <StackLayout Grid.Row="5" Orientation="Horizontal" VerticalOptions="Center">
                        <Label Text="郵便番号"></Label>
                    </StackLayout>
                    <syncmaskededit:SfMaskedEdit Grid.Row="5" Grid.Column="1"  Value="{Binding SearchParams.PostCode}" Mask="000-0000" HeightRequest="40"
                                                 ValueMaskFormat="ExcludePromptAndLiterals" VerticalOptions="Center"/>

                    <StackLayout Grid.Row="6" Orientation="Horizontal" VerticalOptions="Center">
                        <Label Text="住所"></Label>
                    </StackLayout>
                    <Entry Grid.Row="6" Grid.Column="1" Text="{Binding SearchParams.Address}" ></Entry>

                    <StackLayout Grid.Row="7" Orientation="Horizontal" VerticalOptions="Center">
                        <Label Text="電話番号"></Label>
                    </StackLayout>
                    <Entry Grid.Row="7" Grid.Column="1" Text="{Binding SearchParams.TelephoneNumber}"></Entry>
                    <Label Grid.Row="8" Text="内容" VerticalOptions="Center"></Label>
                    <combobox:SfComboBox Grid.Row="8" Grid.Column="1"
                                     Text="" HeightRequest="40" VerticalOptions="Center"
                                         BorderColor="Black"
                                     SelectedItem="{Binding ContentSelected}"
                                         DisplayMemberPath="DisplayValue"
                                     IsEditableMode="True"
                                     SelectAllOnFocus="True"
                                     AllowFiltering="False"
                                     TextHighlightMode="MultipleOccurrence"
                                     HighlightedTextColor="Red"
                                     SuggestionMode="Contains"
                                     DataSource="{Binding ContentItems}"
                                     SuggestionBoxPlacement="Auto"
                                     TextSize="14">
                    </combobox:SfComboBox>

                    <StackLayout Grid.Row="9" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalOptions="End">
                        <Button Grid.Column="1" Text="検索" BackgroundColor="#9FBFBE" CornerRadius="10" BorderWidth="2"
                                FontAttributes="Bold" FontSize="22" HeightRequest="50" WidthRequest="150" 
                                VerticalOptions="Center" HorizontalOptions="End" Command="{Binding SearchCommand}">
                        </Button>
                        <Button Grid.Column="1" Text="終了" BackgroundColor="#9FBFBE" CornerRadius="10" BorderWidth="2"
                                FontAttributes="Bold" FontSize="22" HeightRequest="50" WidthRequest="150" 
                                VerticalOptions="Center" HorizontalOptions="End" Command="{Binding CloseCommand}">
                        </Button>
                    </StackLayout>
                </Grid>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>